<!-- Main body
================== -->
  <div class="wrapper">
    <div class="section-header">
	  <div class="container">
	    <div class="row">
	      <div class="col-md-12">
		    <!-- Remove the .animated class if you don't want things to move -->
			<h1 class="animated slideInLeft"><span>Login</span></h1>
		  </div>
		</div>
	  </div>
    </div>
	<div class="container">
	  <div class="row">

		<%  _.each(flash, function(message, type){ %>
			<div class="alert alert-<%= type %>"><%= message %></div>
		<% }); %>

	    <!-- Contact us form -->
		<div class="col-sm-4">
		  <h2 class="hl top-zero">Login</h2>
		  <hr>
		
			<form role="form" action="/login" method="POST">
			  <div class="form-group">
				<label for="email">Your email address</label>
				<input type="email" class="form-control" id="email" placeholder="Enter email" name="email" />
			  </div>
			  <div class="form-group">
				<label for="name">Password</label>
				<input type="password" class="form-control" id="name" placeholder="Enter Password" name="password" />
			  </div>
			  <input type='hidden' name='_csrf' value='<%= _csrf %>' />
			  <button type="submit" class="hl-btn hl-btn-green">Login</button>
			</form>
	
		</div>
		<div class="col-sm-4"></div>
		<div class="col-sm-4"></div>
	  </div>
	</div>
  </div>
